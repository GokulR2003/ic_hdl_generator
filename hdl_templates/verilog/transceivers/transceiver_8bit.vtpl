`timescale 1ns / 1ps

module {{module_name|default('IC_' + part_number)}}(
    // Control inputs
    input wire DIR,
    input wire OE_n,
    
    // Bidirectional buses
    inout wire [7:0] A,
    inout wire [7:0] B,
    
    // Power ports
    input wire {{ports.power[0]}},  // VCC
    input wire {{ports.power[1]}}   // GND
);

// ============================================================================
